        }
        /* Pintu "tutup" (hilang) */
        #lorryButtonV3.state-closing .open-doors {
            opacity: 0;
            transform: translate(calc(-50% - 29px), -50%) rotate(0deg);
        }
        /* Pintu tertutup "muncul" (selepas 0.3s) */
        #lorryButtonV3.state-closing .closed-door {
            opacity: 1;
            transition-delay: 0.3s;
        }

        /* State 3: Driving (Lori & pintu tertutup bergerak) */
        #lorryButtonV3.state-driving .animation-world,
        #lorryButtonV3.state-driving .closed-door {
