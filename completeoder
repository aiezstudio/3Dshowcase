<body class="min-h-screen flex items-center justify-center bg-gray-100">

    <button id="lorryButtonV3">
        
        <!-- Teks Asal (Visible secara lalai) -->
        <span class="text-default visible">Complete Order</span>
        
        <!-- Kontena Animasi (Tersembunyi secara lalai) -->
        <span class="animation-world">
            <!-- SVG Lori (Kepala + Treler) -->
            <svg class="lorry-svg" width="60" height="28" viewBox="0 0 60 28" xmlns="http://www.w3.org/2000/svg">
                <!-- Treler Putih -->
                <rect x="2" y="4" width="40" height="20" rx="4" fill="#E5E7EB"/>
                <!-- Kepala Biru -->
                <rect x="40" y="6" width="18" height="16" rx="4" fill="#4F46E5"/>
                <!-- Tingkap Putih -->
                <rect x="42" y="9" width="12" height="10" rx="2" fill="white"/>
            </svg>

            <!-- Kotak Kuning (untuk "masuk") -->
            <span class="box-item"></span>
            
            <!-- Pintu Terbuka (dua garisan) -->
            <span class="open-doors"></span>
            
            <!-- Pintu Tertutup (segiempat kuning) -->
            <span class="closed-door"></span>
            
            <!-- Garisan Putus-putus -->
            <span class="lorry-trail"></span>
        </span>
        
        <!-- Teks Selesai (Tersembunyi secara lalai) -->
        <span class="text-completed">Completed âœ“</span>
    
    </button>

    <script>
        // --- JavaScript Vanila (State Machine) ---
        const button = document.getElementById('lorryButtonV3');
        const textDefault = button.querySelector('.text-default');
        const textCompleted = button.querySelector('.text-completed');

        // Pembolehubah untuk menghalang klik berganda
        let isProcessing = false;

        button.addEventListener('click', function() {
            if (isProcessing) return; // Keluar jika animasi sedang berjalan
            isProcessing = true;

            // 1. Teks "Complete Order" hilang
            textDefault.classList.remove('visible');
            
            // 2. Lori muncul, Pintu terbuka, Kotak kelihatan
            button.className = 'state-loading';

            // 3. Selepas 1 saat (tunjuk kotak)
            setTimeout(() => {
                // Mula animasi "tutup pintu"
                button.className = 'state-closing';
            }, 1000); // 1 saat untuk "loading"

            // 4. Selepas 0.8 saat lagi (animasi tutup selesai)
            setTimeout(() => {
                // Mula animasi "jalan"
                button.className = 'state-driving';
            }, 1800); // (1000 + 800)

            // 5. Selepas 2 saat lagi (animasi jalan selesai)
            setTimeout(() => {
                // Animasi selesai
                button.className = 'state-completed';
                textCompleted.classList.add('visible');
                // isProcessing = false; // Biar "completed", tak perlu reset
            }, 3800); // (1800 + 2000)
        });
    </script>

</body>
</html>

