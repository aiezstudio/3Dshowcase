        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5;
        }

        /* --- Animasi Bergerak (sama macam V2) --- */
        @keyframes drive-lorry {
            0% { transform: translateX(0); }
            100% { transform: translateX(150px); }
        }

        @keyframes draw-trail {
            0% { width: 0; transform: translateX(0); }
            50% { width: 120px; transform: translateX(0); }
            100% { width: 120px; transform: translateX(150px); }
        }

        /* --- Styling Butang --- */
        #lorryButtonV3 {
            position: relative;
            width: 240px; 
            height: 60px;
            border-radius: 9999px;
            background-color: #222;
            color: white;
            font-weight: 600;
            cursor: pointer;
            overflow: hidden;
            transition: background-color 0.4s ease, transform 0.2s ease;
        }

        #lorryButtonV3:active:not(.state-processing):not(.state-completed) {
            transform: scale(0.96);
        }

        /* --- Kontena untuk semua elemen --- */
        /* Teks */
        .text-default, .text-completed {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0;
            transition: opacity 0.3s ease, transform 0.3s ease;
        }
        
        /* Kontena Animasi (PENTING) */
        .animation-world {
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        /* Elemen dalam Kontena Animasi */
        .lorry-svg {
            position: relative;
            z-index: 10;
        }
        .box-item, .open-doors, .closed-door, .lorry-trail {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        /* --- 1. Teks "Complete Order" --- */
        .text-default.visible {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1);
        }

        /* --- 2. Lori Muncul (Loading) --- */
        .animation-world.visible {
            opacity: 1;
        }

        /* Elemen Pintu Terbuka */
        .open-doors {
            width: 2px;
            height: 20px;
            background-color: #F59E0B;
            /* Buat pintu kedua guna pseudo-element */
            box-shadow: -6px 0 0 #F59E0B;
            transform: translate(calc(-50% - 30px), -50%) rotate(25deg);
            transition: all 0.3s ease;
            opacity: 0;
        }
        
        /* Kotak Kuning */
        .box-item {
            width: 10px;
            height: 10px;
            background-color: #D97706;
            transform: translate(calc(-50% - 20px), -50%) scale(1);
            transition: all 0.3s ease;
            opacity: 0;
        }
        
        /* Pintu Tertutup (Segiempat kuning) */
        .closed-door {
            width: 4px;
            height: 16px;
            background-color: #F59E0B;
            border-radius: 2px;
            transform: translate(calc(-50% - 29px), -50%);
            opacity: 0;
            transition: all 0.3s ease;
        }

        /* --- 3. Animasi Bergerak (Driving) --- */
        .lorry-trail {
            height: 2px;
            width: 0;
            background: repeating-linear-gradient(
                to right, white 0, white 5px, transparent 5px, transparent 10px
            );
            transform: translate(-50%, -50%) translateX(-20px);
            opacity: 0;
        }

        /* --- 4. Teks Selesai --- */
        .text-completed.visible {
            opacity: 1;
        }


        /* --- MENGURUSKAN KEADAAN (STATES) --- */

        /* State 1: Loading (Lori muncul, pintu terbuka, kotak nampak) */
        #lorryButtonV3.state-loading .animation-world,
        #lorryButtonV3.state-loading .open-doors,
        #lorryButtonV3.state-loading .box-item {
            opacity: 1;
        }

        /* State 2: Closing (Kotak masuk, pintu tutup) */
        #lorryButtonV3.state-closing .animation-world {
            opacity: 1;
        }
        /* Kotak "masuk" (mengecil & hilang) */
        #lorryButtonV3.state-closing .box-item {
            opacity: 0;
