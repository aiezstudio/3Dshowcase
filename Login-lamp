    <script>
        // --- JavaScript Vanila ---

        // Dapatkan elemen utama
        const appContainer = document.getElementById('app');
        const loginLamp = document.getElementById('loginLamp');
        const loginForm = document.getElementById('loginForm');

        // Fungsi untuk 'toggle' lampu dan borang
        function toggleLogin() {
            // 'toggle' kelas 'active' pada kontena utama
            appContainer.classList.toggle('active');
        }

        // Tambah 'event listener' pada lampu
        loginLamp.addEventListener('click', toggleLogin);

        // Halang borang daripada 'submit' dan muat semula laman
        loginForm.addEventListener('submit', function(event) {
            event.preventDefault();
            // Di sini anda boleh tambah logik pengesahan
            console.log('Borang telah disubmit!');
            // Mungkin 'matikan' lampu selepas berjaya login
            // appContainer.classList.remove('active');
        });

    </script>

