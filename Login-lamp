            border-color: transparent transparent #1a1a1a transparent;
            border-radius: 0 0 20px 20px;
            position: absolute;
            bottom: -25px;
            left: 50%;
            transform: translateX(-50%);
            /* Sembunyikan senyuman dahulu */
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        .stand {
            width: 12px;
            height: 90px;
            background-color: #d1d1d1;
        }

        .base {
