        #app.active .smile {
            opacity: 1;
        }

        /* Sembunyikan borang secara lalai */
        #loginForm {
            opacity: 0;
            transform: scale(0.9) translateY(20px);
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            pointer-events: none; /* Tak boleh diklik bila tersembunyi */
        }

        /* Tunjukkan borang apabila .active */
        #app.active #loginForm {
            opacity: 1;
            transform: scale(1) translateY(0);
            pointer-events: auto; /* Boleh diklik */
        }
        
