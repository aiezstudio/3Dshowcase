                <!-- Rangka Basikal -->
                <polygon points="30,90 60,40 100,90" stroke="#576574" stroke-width="5" fill="none"/>
                <line x1="60" y1="40" x2="60" y2="70" stroke="#576574" stroke-width="5"/> <!-- Tiang tempat duduk -->
                <line x1="60" y1="40" x2="90" y2="35" stroke="#576574" stroke-width="5"/> <!-- Handle -->
            </svg>
        </div>
        
        <!-- Pokok 3 (Paling Depan) -->
